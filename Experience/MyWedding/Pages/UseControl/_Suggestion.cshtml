@model MyWedding.Pages.IndexModel
<div class="pt-page pt-page-8">
    <div class="container-fluid display_none bg-main-image">
        <div class="blur-img bg-rsvp menu-background-image" data-image="@Model.myWedding.ImageSuggestion" style="background-image: url('@Model.myWedding.ImageHome');"></div>
        <div class="page-fixed">
            <div class="bg-main-image-overlay-fixed ">
                <div class="main-section-s2">
                    <div class="col-md-12">
                        <div class="page-title wow fadeInUp" data-class="fadeInUp">
                            <h2>Sổ Lưu Bút<span><i class="fas fa-heart"></i></span></h2>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col-12 col-lg-4 col-md-4">
                                    <div class="rsvp">
                                        <div class="rsvp-form white-box wow fadeInUp" data-class="fadeInUp" style="width: 100%;">
                                            <p> Gửi những lời chúc mừng tốt đẹp nhất!</p>
                                            <div id="Success" class="successalert" style=" display:none;"><strong>Thank you</strong>. </div>
                                            <div id="Error" class="errorelert" style="display:none;"> <strong>Error occurred while sending email.</strong> Try again later. </div>
                                            <div class="wish-box-form">
                                                <form class="form floating-label text-left form-validate" id="wish-form" method="post">
                                                    <div class="form-group">
                                                        <input type="text" class="form-control" id="Name" name="SuggestionTitle" required data-rule-minlength="2" />
                                                        <label for="Name">Nhập họ tên*</label>
                                                    </div>
                                                    <div class="form-group">
                                                        <textarea class="form-control" id="content" name="SuggestionContent" rows="5" required data-rule-minlength="8"></textarea>
                                                        <label>Nhập lời chúc của bạn*</label>
                                                    </div>
                                                    <div class="rsvp-button text-center">
                                                        <button type="submit" class="hvr-sweep-to-right btnSuggestion">Gửi</button>
                                                        <div id="loading" style="display:none; padding-left:20px;"><img src="wedding/images/ajax-loader.gif" alt="Loader"></div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-8 col-md-8">
                                    <div class="wish-box wow fadeInUp mysuggestions" data-class="fadeInUp">
                                        @{
                                            foreach (var item in Model.suggestions)
                                            {
                                                <div class="wish-box-item ">
                                                    <strong>@item.Title</strong>
                                                    <p class="text-left">@item.Content</p>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>