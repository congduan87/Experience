<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="/assets/fonts/fontawesome5.0.10/css/fontawesome-all.css" rel="stylesheet" />
    <link href="/assets/plugin/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="/assets/fileUpload/uploadFile.css" rel="stylesheet" />
</head>
<body>
    <section class="upload-file">
        <h2 class="title">Upload file</h2>
        <ul class="clearfix sub-title">
            <li>
                <p class="lead-text">
                    Danh sách file upload
                </p>
            </li>
            <li><button class="edit-file-upload">Upload File</button></li>
            <li><button class="edit-folder">Create Folder</button></li>
        </ul>

        <div class="clearfix">
            <nav class="tree-view">
                <ul>
                    <li data-key="0">Company Company Company</li>
                    <li class="collapse" data-key="1">
                        Danh sách
                        <ul>
                            <li data-key="1.1">Selfie Selfie Selfie</li>
                            <li data-key="1.2">ABC ABC ABC</li>
                            <li data-key="1.3">CDE CDE CDE</li>
                        </ul>
                    </li>
                    <li class="expand" data-key="2">
                        Danh sách
                        <ul>
                            <li data-key="2.1">Selfie Selfie Selfie</li>
                            <li data-key="2.2">ABC ABC ABC</li>
                            <li data-key="2.3">CDE CDE CDE</li>
                        </ul>
                    </li>
                </ul>
            </nav>

            <nav class="file-upload-list">
                <ul>
                    @*<li data-key="a.1">
                            <p class="image"><img src="./images/img_360x220.png" alt=""></p>
                            <p class="detail">Hinh anh </p>
                        </li>
                        <li data-key="a.2">
                            <p class="image"><img src="./images/img_360x220.png" alt=""></p>
                            <p class="detail">Hinh anh</p>
                        </li>
                        <li data-key="a.3">
                            <p class="image"><img src="./images/img_360x220.png" alt=""></p>
                            <p class="detail">Hinh anh</p>
                        </li>*@
                </ul>
            </nav>
        </div>
    </section>

    <div id="contextMenuTreeView" class="context-menu"
         style="display: none">
        <ul>
            <li class="edit-folder"><a href="#">Chỉnh sửa</a></li>
            <li class="delete-folder"><a href="#">Xóa</a></li>
        </ul>
    </div>
    <div id="contextMenuFileUpload" class="context-menu"
         style="display: none">
        <ul>
            <li class="edit-file-upload"><a href="#">Chỉnh sửa</a></li>
            <li class="delete-file-upload"><a href="#">Xóa</a></li>
            <li class="copy-link-file-upload"><a href="#">Copy link</a></li>
        </ul>
    </div>

    <button type="button" class="btn btn-primary hidden" id="ModalButton" data-toggle="modal">Launch demo modal</button>
    <div class="modal fade" id="ModalCreateFolder" tabindex="-1" role="dialog" aria-labelledby="CreateFolderModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <form class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="CreateFolderModalLabel">Cập nhật folder</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label">Tên folder</label>
                        <input type="text" class="form-control" name="Name" autocomplete="off">
                        <span class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="ID">
                    <input type="hidden" name="IDParent">
                    <button type="button" class="btn btn-primary save-folder">Save</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
    <div class="modal fade" id="ModalFileUpload" tabindex="-1" role="dialog" aria-labelledby="FileUploadLabel" aria-hidden="true">
        <form class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="FileUploadLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label">Tên file</label>
                        <input type="text" class="form-control" name="Name" autocomplete="off">
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">File upload</label>
                        <input type="file" class="form-control" name="file">
                        <input type="text" readonly="readonly" class="form-control" name="Path">
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="ID" autocomplete="off">
                    <input type="hidden" name="IDParent">
                    <button type="button" class="btn btn-primary save-file">Save</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </form>
    </div>
    <script src="/assets/plugin/jquery/jquery.min.js"></script>
    <script src="/assets/plugin/bootstrap/bootstrap.min.js"></script>
    <script src="/assets/fileUpload/uploadFile.js"></script>
</body>
</html>